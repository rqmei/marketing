<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/linear_vertical"
    android:background="@drawable/white_radius_bg"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_dialog_title"
        style="@style/width_height_ww"
        android:layout_marginTop="@dimen/dp_10"
        android:text="温馨提示"
        android:textColor="@color/G1"
        android:textSize="@dimen/h3" />

    <ScrollView
        style="@style/width_height_mw"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_dialog_content"
            style="@style/width_height_ww"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/G2"
            android:layout_marginTop="@dimen/dp_12"
            android:textSize="@dimen/h5" />
    </ScrollView>

    <lib.android.timingbar.com.view.ShapeTextView
        android:id="@+id/stv_ok"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/white"
        android:text="确定"
        android:textSize="@dimen/h3"
        app:defaultColor="@color/c1"
        app:roundRadius="@dimen/dp_4"/>
</LinearLayout>
