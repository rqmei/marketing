<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#409EFF"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_navigation_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dp_20"
            android:src="@mipmap/ic_arrow_left_white" />

        <TextView
            android:id="@+id/tv_navigation_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="详情"
            android:textColor="@color/white"
            android:textSize="@dimen/h1" />
    </RelativeLayout>


    <LinearLayout
        style="@style/linear_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_13"
        android:background="@drawable/white_radius_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="vertical">

            <TextView
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:id="@+id/tv_ticket_type_name"
                style="@style/ticket_detail_title"
                android:text="" />

            <TextView
                android:id="@+id/tv_ticket_state"
                style="@style/ticket_detail_state"
                android:text="" />

            <TextView
                android:id="@+id/tv_use_time"
                style="@style/ticket_detail_state"
                android:text="-" />

            <lib.android.tb.common.view.ShapeTextView
                android:id="@+id/stv_use"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginTop="35dp"
                android:layout_marginRight="@dimen/dp_22"
                android:layout_marginBottom="26dp"
                android:gravity="center"
                android:text="立即领取"
                android:textColor="#FFFFFF"
                app:defaultColor="#CCCCCC"
                app:roundRadius="4dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ticket_detail_line" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="47dp">

                <TextView
                    style="@style/ticket_detail_state"
                    android:layout_gravity="left"
                    android:layout_marginBottom="6dp"
                    android:text="使用规则" />

                <TextView
                    android:id="@+id/tv_discount"
                    style="@style/ticket_detail_des"
                    android:text="优惠规则：-" />

                <TextView
                    android:id="@+id/tv_scene"
                    style="@style/ticket_detail_des"
                    android:text="使用场景：-" />

                <TextView
                    android:id="@+id/tv_consume"
                    style="@style/ticket_detail_des"
                    android:text="消费条件：-" />

                <TextView
                    android:id="@+id/tv_commodity_type"
                    style="@style/ticket_detail_des"
                    android:text="商品类型：-" />

                <TextView
                    android:id="@+id/tv_commodity_name"
                    style="@style/ticket_detail_des"
                    android:text="商品名称：-" />

                <TextView
                    android:id="@+id/tv_buy_time"
                    style="@style/ticket_detail_des"
                    android:text="购买日期范围：-" />

                <TextView
                    android:id="@+id/tv_buy_count"
                    style="@style/ticket_detail_des"
                    android:text="购买数量：-" />

                <TextView
                    android:id="@+id/tv_buy_amount"
                    style="@style/ticket_detail_des"
                    android:text="购买总金额：-" />

                <TextView
                    android:id="@+id/tv_explain"
                    style="@style/ticket_detail_des"
                    android:text="说明：-" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
