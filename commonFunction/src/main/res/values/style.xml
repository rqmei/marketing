<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ticket_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">18.5dp</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ticket_type">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="ticket_des">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_marginTop">7.5dp</item>
        <item name="android:layout_marginBottom">9.5dp</item>
    </style>
    <style name="ticket_vertical_btn">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ff409eff</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
<style name="common">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#333333</item>
    <item name="android:layout_gravity">center_horizontal</item>
</style>
    <style name="ticket_detail_title" parent="common">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">40.5dp</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ticket_detail_state" parent="common">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">14.5dp</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ticket_detail_des">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>
</resources>